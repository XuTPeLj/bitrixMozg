{
  "manifest_version": 2,
  "name": "bitrixMozg",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "contentCore.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contentSettings",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "bitrixMozg",
    "default_popup": "popup.html",
    "default_icon": "block.png",
    "permissions": true
  }
}